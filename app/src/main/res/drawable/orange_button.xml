<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#db7700" />
            <gradient
                android:angle="90"
                android:startColor="#db7739"
                android:endColor="#ef8c00"
                android:type="linear" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#db7700" />
            <solid android:color="#db7700"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#db7700" />
            <gradient
                android:angle="90"
                android:startColor="#db7739"
                android:endColor="#ef8c00"
                android:type="linear" />
        </shape>
    </item>
</selector>